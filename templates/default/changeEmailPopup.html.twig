<div id="changeEmailModal" class="modal in" role="dialog">

    <div class="modal-dialog">

        <div class="modal-content input-origin">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" style="margin: -20px">Ã—</button>
            </div>
            <div class="modal-body">

                <div class="fixedLayout">

                    <h1>{{ 'Change email address'|trans }}</h1>

                    {{ form_start(changeEmailForm) }}

                    <div class="form-group">
                        {{ form_label(changeEmailForm.email) }}
                        <div class="input password required">
                            <span {% if error is defined and error.location == 'EMAIL_CHANGE' %}
                                class="d-inline-block" data-placement="top"
                                data-content='{{ error.data|trans }}'
                                    {% endif %}>
                                {{ form_widget(changeEmailForm.email) }}
                            </span>
                        </div>
                    </div>

                    {{ form_widget(changeEmailForm.submit) }}

                    {{ form_end(changeEmailForm) }}

                </div>

                <br><br>

            </div>

        </div>

    </div>

</div>

{% if error is defined and error.location == 'EMAIL_CHANGE' %}
    <script>
        $('#changeEmailModal').modal('show');
    </script>
{% endif %}