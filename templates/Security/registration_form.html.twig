{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register-popup.css') }}">
{% endblock %}

{% block body %}

    <div id="register-popup">

        <div class="register-title">Бесплатная регистрация</div>

        <form action="/" class="formFields" id="regForm" name="regForm" method="post" accept-charset="utf-8">

            <div class="form-group_row clearfix">
                <div class="form-group half left">
                    <label for="#UserName"></label>
                    <div class="input text required">
                        {{ form_widget(form.name) }}
                    </div>
                </div>

                <div class="form-group half right">
                    <label for="#UserSurname"></label>
                    <div class="input text">
                        {{ form_widget(form.surname) }}
                    </div>
                </div>
            </div>

            <div class="form-group_row clearfix">
                <div class="form-group">
                    <label for="#regMail"></label>
                    <div class="input text required">
                        {{ form_widget(form.email) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="#regPasswd"></label>
                    <div class="input password required">
                        {{ form_widget(form.password) }}
                    </div>
                </div>
            </div>

            <div class="register-fb">
                или <a href="{{ fbLoginUrl }}"><span class="register-fb_btn">С помощью Facebook</span></a>
            </div>

            {{ form_widget(form.submit) }}
            
            <p class="register-descr">Нажав на кнопку "Далее", вы соглашаетесь с нашими
                <a href="#" target="_blank" style="text-decoration: underline;"> Условиями использования</a>
                и подтверждаете, что ознакомились с нашей
                <a href="#" target="_blank" style="text-decoration: underline;">Политика конфиденциальности</a>.
            </p>

        </form>

    </div>


{% endblock %}